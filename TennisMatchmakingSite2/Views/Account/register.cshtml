@model TennisMatchmakingSite2.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}
<div class="h-screen w-screen flex items-start pt-32 justify-center">
    <div class="max-w-md w-full mx-auto bg-white rounded-lg shadow-md p-8">
        <h2 class="text-center text-2xl font-bold mb-8">Register</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-4" })
        <div class="space-y-4">
            <div>
                @Html.LabelFor(m => m.Name, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.TextBoxFor(m => m.Name, new { @class = "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                @Html.LabelFor(m => m.Email, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.TextBoxFor(m => m.Email, new { @class = "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                @Html.LabelFor(m => m.Password, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.PasswordFor(m => m.Password, new { @class = "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                @Html.LabelFor(m => m.PlayerLevel, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.DropDownListFor(m => m.PlayerLevel,
                    new SelectList(Enum.GetValues(typeof(PlayerLevel))),
                    new { @class = "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" })
                @Html.ValidationMessageFor(m => m.PlayerLevel, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                Register
            </button>
        </div>

        <div class="text-center mt-4 text-sm text-gray-600">
            Already have an account?
            <a asp-action="Login" class="text-blue-600 hover:text-blue-500">Login</a>
        </div>
        }
    </div>
</div>